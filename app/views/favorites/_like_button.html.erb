<% if current_user.like?(studyrecord) %>
    <%= form_with(model: current_user.favorites.find_by(studyrecord_id: studyrecord.id), local: true, method: :delete) do |f| %>
        <%= hidden_field_tag :studyrecord_id, studyrecord.id %>
        <%= f.submit 'いいね！解除', class: 'btn btn-danger' %>
    <% end %>
<% else %>
    <%= form_with(model: current_user.favorites.build(studyrecord_id: studyrecord.id), local: true) do |f| %>
        <%= hidden_field_tag :studyrecord_id, studyrecord.id %>
        <%= f.submit 'いいね！', class: 'btn btn-primary' %>
    <% end %>
<% end %>
        
