<div class="bg-dark text-white mb-5" style="padding: 10px;">
    <h5 class="ml-3"><em>ユーザ登録ページ</em></h5>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <%= render 'layouts/flash_messages' %>
            <%= form_with(model: @user, local: true) do |f|%>
            
            <div class="form-group">
                <%= f.label :name, '氏名' %>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <%= f.label :email, 'メールアドレス' %>
                <%= f.email_field :email, class: 'form-control' %>
            </div>
            
            <div class="form-group" >
                <%= f.label :password, 'パスワード' %>
                <%= f.password_field :password, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <%= f.label :password_confirmation, 'パスワード(確認用)' %>
                <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
            
            <div class="mt-5">
                <%= f.submit '登録する', class: 'btn btn-primary btn-block rounded-pill' %>
            </div>
            <% end %>
            
            <div class="mt-3 text-center">
                <a href="/" class="btn btn-link">ホームに戻る</a>
            </div>
        </div>
    </div>
</div>

