<div class="container">
    <div class="row">
        <div class="col-sm-8 mt-5">
            <div class="container">
                <div class="row mb-3">
                    <div class="col-sm-2">
                        <img class="rounded", src="<%= gravatar_url(@user, { size: 100 }) %>" alt="">
                    </div>
                    <div class="col-sm-10">
                        <div class="mb-3">
                        <%= @user.name %>
                        <%= render 'relationships/follow_button', user: @user %>
                        </div>
                        <p>累計学習時間：<%= render 'studytime', user: @user %></p>
                        
                    </div>
                </div>
                <ul class="nav nav-tabs nav-justified">
                    <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link">最近の勉強記録</a></li>
                    <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link">フォロー</a></li>
                    <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link">フォロワー</a></li>
                    <li class="nav-item"><a href="<%= goodlists_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(goodlists_user_path(@user)) %>">いいね！</a></li>
                </ul>
                <%= render 'studies', studies: @goodlists %>
            </div>
        </div>
        
        <div class="col-sm-4">
            <%= render 'layouts/navbar', user: current_user %>
        </div>
    </div>
</div>