<%= render 'layouts/header' %>

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <h5>プロフィールを編集する</h5>
            <%= form_with(model: @user, local: true) do |f| %>
                <div class="form-group mt-5">
                    <%= f.label :name, 'ユーザネーム' %>
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class="form-group mt-5">
                    <%= f.label :profile, 'プロフィール' %>
                    <%= f.text_area :profile, class: 'form-control', placeholder: '(500字以内)' %>
                </div>
                <div class="text-center mb-3">
                <%= f.submit 'プロフィールを編集する', class: 'btn btn-primary rounded-pill' %>
                </div>
                <div class="text-center">
                    <u><%= link_to '戻る', user_path(@user) %></u>
                </div>
            <% end %>
        </div>
        <div class="col-sm-4">
            <%= render 'layouts/navbar', user: current_user %>
        </div>
    </div>
</div>