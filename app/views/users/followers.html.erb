<%= render 'layouts/header' %>

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <%= render 'layouts/flash_messages' %>
            <%= render 'header', user: @user %>
            <div style="display: flex;">
                <div class="mr-auto">
                    <p><%= @count_followers %>人のフォロワー</p>
                </div>
                <div>
                    <% if @user.id == current_user.id %>
                    <%= link_to 'プロフィールを編集する', edit_user_path, class: 'btn btn-primary btn-sm rounded-pill' %>
                    <% end %>
                </div>
            </div>
            
            <ul class="nav nav-tabs nav-justified">
                <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link">最近の勉強記録</a></li>
                <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link">フォロー</a></li>
                <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">フォロワー</a></li>
                <li class="nav-item"><a href="<%= goodlists_user_path(@user) %>" class="nav-link">いいね！</a></li>
            </ul>
            <% unless @followers.empty? %>
                <%= render 'user', users: @followers %>
                <div class="mt-3">
                <%= paginate @followers %>
                </div>
            <% else %>
                <div class="text-center mt-3">まだフォロワーがいません</div>
            <% end %>
        </div>
        
        <div class="col-sm-4">
            <% if logged_in? %>
            <%= render 'layouts/navbar', user: current_user %>
            <% else %>
            <%= render 'layouts/login' %>
            <% end %>
        </div>
    </div>
</div>