<div style="padding: 10px; background-color: #f0f8ff; border-radius: 30px;">
    <div class="text-center mt-5 mb-5">
        <h4>ログイン</h4>
    </div>


    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
            
    <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control mb-4' %>
    </div>
    <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control mb-5' %>
    </div>
            
    <%= f.submit 'ログイン', class: 'btn btn-primary btn-block rounded-pill' %>
    <% end %>
            
    <div class="mt-5 text-center">
        ユーザをお持ちでない方はこちら
        <%= link_to 'ユーザ登録', signup_path, class: 'btn btn-info btn-block rounded-pill mt-1' %>
    </div>
    <div class="mt-3 mb-3 text-center"><a href='/'><u>ホームに戻る</u></a></div>
</div>            
